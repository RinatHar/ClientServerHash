<Window x:Class="ClientHash.RegisterWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientHash"
        mc:Ignorable="d"
        Title="Регистрация" Height="350" Width="500">
    <Grid x:Name="MainRoot" Background="LightGray">
        <Border MinWidth="300" Margin="15" Background="White" VerticalAlignment="Center" Padding="30" MaxWidth="500" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Регистрация" Margin="0 10" FontSize="26" FontWeight="Bold"/>
                
                <TextBox materialDesign:HintAssist.Hint="Введите логин" x:Name="loginValue" FontSize="16"></TextBox>
                <TextBox materialDesign:HintAssist.Hint="Введите пароль" x:Name="passValue" Margin="0 10" FontSize="16"></TextBox>

                <Button FontSize="16" Content="Зарегистрироваться" Margin="0 10" Height="30" Click="Register"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
